{
  "name": "love2d-typescript",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Jake Klassen",
  "license": "MIT",
  "type": "module",
  "imports": {
    "#app/*": "./dist/*"
  },
  "scripts": {
    "prebuild": "shx rm -rf game",
    "build": "shx rm -rf game && pnpm build:tstl && pnpm build:copy",
    "build:tstl": "tstl -p tsconfig.build.json",
    "build:copy": "shx cp -R res game",
    "build:watch": "tstl -w -p tsconfig.build.json",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" .eslintrc.cjs",
    "start": "love game --console",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/eslint": "8.56.10",
    "@types/node": "^20.12.8",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.8.0",
    "@typescript-to-lua/language-extensions": "^1.19.0",
    "comment-json": "4.2.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "expect": "29.7.0",
    "love-typescript-definitions": "^11.4.3",
    "lua-types": "^2.13.1",
    "prettier": "3.2.5",
    "shx": "0.3.4",
    "tsx": "^4.8.2",
    "typescript": "5.4.5",
    "typescript-to-lua": "^1.25.1",
    "vitest": "^1.5.3"
  },
  "dependencies": {
    "type-fest": "^4.18.1"
  }
}
