{
  "name": "love2d-typescript",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Jake Klassen",
  "license": "MIT",
  "type": "module",
  "imports": {
    "#app/*": "./dist/*"
  },
  "scripts": {
    "prebuild": "shx rm -rf game",
    "build": "shx rm -rf game && pnpm build:tstl && pnpm build:copy",
    "build:tstl": "tstl -p tsconfig.build.json",
    "build:copy": "shx cp -R res game",
    "build:watch": "tstl -w -p tsconfig.build.json",
    "lint": "oxlint --type-aware",
    "start": "love game --console",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^24.10.3",
    "comment-json": "4.5.0",
    "expect": "30.2.0",
    "love-typescript-definitions": "^11.5.2",
    "lua-types": "^2.13.1",
    "oxlint": "^1.32.0",
    "oxlint-tsgolint": "^0.8.5",
    "prettier": "3.7.4",
    "shx": "0.4.0",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "typescript-to-lua": "^1.33.0",
    "vitest": "^4.0.15"
  }
}
